{% extends 'base.html.twig' %}

{% block page_title %}Inscription{% endblock %}

{% block page_content %}
<main>
    {{ form_start(formulaireUtilisateur, {'attr': {'class': 'center basic-form'}}) }}
        <fieldset>
            <legend>Inscription</legend>
            <div class="access-container">
                {{ form_label(formulaireUtilisateur.login, 'Login') }}
                <p class="help-input-form">Entre 4 et 20 caractères</p>
                {{ form_widget(formulaireUtilisateur.login) }}
            </div>
            <div class="access-container">
                {{ form_label(formulaireUtilisateur.plainPassword, 'Mot de passe') }}
                <p class="help-input-form">Entre 8 et 30 caractères, au moins une minuscule, une majuscule et un nombre</p>
                {{ form_widget(formulaireUtilisateur.plainPassword) }}
            </div>
            <div class="access-container">
                {{ form_label(formulaireUtilisateur.adresseEmail, 'Adresse mail') }}
                {{ form_widget(formulaireUtilisateur.adresseEmail) }}
            </div>
            <div class="access-container">
                {{ form_label(formulaireUtilisateur.fichierPhotoProfil, 'Photo de profil') }}
                {{ form_widget(formulaireUtilisateur.fichierPhotoProfil) }}
            </div>
            {{ form_widget(formulaireUtilisateur.inscription, {'label': 'S\'inscrire', 'attr': {'class': 'basic-form-submit'}}) }}
        </fieldset>
        {{ form_rest(formulaireUtilisateur) }}
    {{ form_end(formulaireUtilisateur) }}
</main>
{% endblock %}
